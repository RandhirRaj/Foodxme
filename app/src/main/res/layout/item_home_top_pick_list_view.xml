<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewTopPick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_50"
            app:cardCornerRadius="@dimen/dimen_10"
            app:cardElevation="@dimen/dimen_5"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_10"
                android:paddingTop="@dimen/dimen_7"
                android:paddingLeft="@dimen/dimen_7"
                android:paddingRight="@dimen/dimen_7">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewMainCourseItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_40"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Main Course"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/dimen_12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewMainCourseItemName"
                    android:layout_width="@dimen/dimen_0"
                    app:layout_constraintEnd_toStartOf="@+id/imageViewAddToCart"
                    android:layout_height="wrap_content"
                    android:text="Main Course"
                    android:maxLines="1"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:ellipsize="end"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewMainCourseItem" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewMainCourseItemDetaild"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:text="Main Course"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintEnd_toStartOf="@+id/imageViewAddToCart"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/dimen_12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewMainCourseItemName" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageViewAddToCart"
                        android:layout_width="wrap_content"
                        android:elevation="@dimen/dimen_6"
                       android:padding="@dimen/dimen_5"
                        android:layout_height="wrap_content"
                        android:background="@drawable/add_to_cart_bg"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textViewMainCourseItemDetaild"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:srcCompat="@drawable/ic_cart_icon" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewProdeuct"
            android:layout_width="@dimen/dimen_120"
            android:elevation="@dimen/dimen_10"
            android:layout_height="@dimen/dimen_120"
            app:layout_constraintEnd_toEndOf="@id/cardViewTopPick"
            app:layout_constraintStart_toStartOf="@id/cardViewTopPick"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/salmon" />


</androidx.constraintlayout.widget.ConstraintLayout>